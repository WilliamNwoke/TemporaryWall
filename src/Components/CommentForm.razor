@using ContosoCrafts.WebSite.Models
@using ContosoCrafts.WebSite.Services
@using Microsoft.AspNetCore.Components.Web
@inject JsonFileProductService ProductService

<!--Add Comment Form-->
<form>
    <fieldset>
        <legend class="title">Comments</legend>
        <div class="container">
            @*<input type="text"
                name="comment"
                placeholder="Enter Comment Here"
                value="" />*@
            <textarea id="comment"
                      name="comment"
                      placeholder="Enter Comment Here"></textarea>
        </div>
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
        </div>
    </fieldset>
</form>

<br />

<!--Display all comments-->
<h4 class="drk-md-light-text">All Comments:</h4>
<br />
    @if (ProductService.GetProducts().First(x => x.Id == Id).Comments != null)
    {

        @foreach (var comment in ProductService.GetProducts().First(x => x.Id == Id).Comments)
        {
            <h5 class="drk-md-light-text">Comment by Anon:</h5>
            <p class="drk-md-light-text">@comment</p>
        }

    } 

@code {
    [Parameter]
    public string Id { get; set; }
    static string[] comments;

    
}
